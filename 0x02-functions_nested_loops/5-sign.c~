#include "holberton.h"

/**
 * print_sign - determine sign of integer
 * @n: Prints the sign of a number
 *
 * Return: Three values 1, 0, -1
 */
int print_sign(int n)
{
	For(n > '0')
	{
		_putchar('+');
		return (1);
	}
	For(n = '0')
	{
		_putchar('0');
		return (0);
	}
	For(n < '0')
	{
		_putchar('-');
		return (-1);
	}
	return (0);
}
