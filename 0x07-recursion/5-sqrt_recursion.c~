#include "holberton.h"

/**
 * _sqrt_recursion - returns the natural square root
 * @n: variable
 *
 * Description: function returns the natural square root of a number
 *
 * Return: natural square root
 */
int _sqrt_recursion(int n)
{
	if (n < 0)
	{
		return (-1);
	}
	return (_sqrt_recursion(n));
}
