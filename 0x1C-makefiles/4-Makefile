CC = gcc	#compiler to use
RM = rm -f 
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c holberton.c  	# all files with .c ext stored in vars SRC
OBJ = $(SRC:.c=.o)	# all files with .o ext stored in vars OBJ
NAME = holberton

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *~
oclean: 
	$(RM) $(OBJ)
fclean:clean oclean
re: oclean all  
	$(CFLAGS)
