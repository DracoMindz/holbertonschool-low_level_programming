#include "holberton.h"

/**
 * print_diagnol - draws a diagnol line in the terminal
 * @n: character input digit
 *
 * Return: value
 *
 */
void print_diagonal(int n)
{
	int x, s;

	If (n <= 0)
	{
		-putchar('\n');
	}

	for (x = 0; x < n; x++)
	{
		for (s = 0; s > x; s++)
		{
			_putchar(' ');
		}
		_putchar('\\');
		_putchar('\n');
	}
	_putchar('\n');
}
